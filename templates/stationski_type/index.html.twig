{% extends 'base.html.twig' %}

{% block title %}Hello StationskiTypeController!{% endblock %}

{% block body %}
    <style>

        .form {
            background-color: #B8D3B0;
            padding: 20px;
            border: solid #03312E 5px;
            border-radius: 20px;
            max-width: 400px;
            margin: -60% auto 0 auto;
            opacity: 90%;
        }

        input {
            display: block;
            width: 90%;
            padding: 10px;
            margin-bottom: 20px;
            border: none;
            border-radius: 5px;
            font-size: 16px;
            font-family: sans-serif;
            color: #333;
            box-shadow: 0 0 5px rgba(0, 0, 0, 0.3);
        }
        button[type="submit"] {
            background-color: #03312E;
            color: #fff;
            padding: 10px;
            border: none;
            border-radius: 5px;
            font-size: 16px;
            font-family: sans-serif;
            cursor: pointer;
            align-self: center;
            margin: 0 auto;
            display: block;
        }
        label {
            font-size: 16px;
            font-family: sans-serif;
            display: flex;
        }

    </style>

    <header >
        <nav class="navbar" >
            <div class="max-width">
                <div class="logo">
                    <a href="#">Peak <span> </span><span>EXPLORER.</span></a>
                </div>
