{% extends 'base.html.twig' %}

{% block title %}Hello FrontController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    .navbar{
        padding: 15px 0;
        background: #03312E;
    }
    .navbar .logo a span{
        color: #F0F6F6;
        transition: all 0.3s ease;
    }
</style>
    <header >
        <nav class="navbar" >
            <div class="max-width">
                <div class="logo">
                    <a href="#">Peak <span> </span><span>EXPLORER.</span></a>
                </div>
                <ul class="menu">
                    <li><a href="{{ path('app_index') }}" class="menu-btn">acceuil</a></li>
                    <li><a href="{{ path('app_Domaine') }}" class="menu-btn">Domaine</a></li>
                    <li><a href="{{ path('app_login') }}" class="menu-btn">login</a></li>
                    <li><a href="{{ path('app_register') }}" class="menu-btn">Register</a></li>
                    {% if user == 'ROLE_ADMIN'%}
                        <li><a href="{{ path('admin_domaine') }}" class="menu-btn">Admin</a></li>
                    {% elseif user == 'ROLE_ASTATION'%}
                        <li><a href="{{ path('admin_domaine') }}" class="menu-btn">Admin</a></li>
                    {% endif %}
                </ul>
                <div class="menu-btn">
                    <i class="fas fa-bars"></i>
                    <img src="public/assets/images/menu.png">
                </div>
            </div>
        </nav>
    </header>
    <br><br><br><br>

    <h1>les Domaines de skis</h1>
    <p>
        Bienvenue sur la page des domaines de skis

    </p>
    <div class="global">
        {% for domaines in domaine  %}
            <div>
                <h3>{{ domaines.name }}</h3>
                <img src="/uploads/{{ domaines.image }}" alt="image de la station" width="200" height="200">
                <br>
                <a href="{{ path('app_Station',{'id': domaines.id}) }}">voir la station</a>
            </div>


        {% endfor %}
    </div>

{% endblock %}
