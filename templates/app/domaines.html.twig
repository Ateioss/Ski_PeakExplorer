{% extends 'base.html.twig' %}

{% block title %}Hello AppController!{% endblock %}

{% block body %}
<style>
    body {
        background-image: url('/assets/image/background.png');
        background-size: cover;
        background-repeat: no-repeat;
    }
    a{
        text-decoration: none;
        color: black;
        background-color: #007bff;
        border-radius: 10px;
        padding: 10px;
        border: 2px solid black;
    }
    button{
        background-color: #007bff;
        color: #fff;
        padding: 10px;
        border: none;
        border-radius: 5px;
        font-size: 16px;
        font-family: sans-serif;
        cursor: pointer;
    }
    .global{
        display: flex;
        flex-direction: column;

    }
    .global > div a {
        width: 7.5%;
        text-align: center;
    }
    </style>
    <header >
        <nav class="navbar" >
            <div class="max-width">
                <div class="logo">
                    <a href="#">Peak <span> </span><span>EXPLORER.</span></a>
                </div>
                <ul class="menu">
                    <li><a href="{{ path('app_index') }}" class="menu-btn">acceuil</a></li>
                    <li><a href="{{ path('admin_domaine') }}" class="menu-btn">Stations</a></li>
                    <li><a href="{{ path('app_login') }}" class="menu-btn">login</a></li>
                    <li><a href="{{ path('app_register') }}" class="menu-btn">Register</a></li>
                    <li><a href="{{ path('app_Domaine') }}" class="menu-btn">Domaine</a></li>

                </ul>
                <div class="menu-btn">
                    <i class="fas fa-bars"></i>
                    <img src="public/assets/images/menu.png">
                </div>
            </div>
        </nav>
    </header>
    <br><br><br><br>
    <h1>les Domaines de skis</h1>
    <p>
        Bienvenue sur la page des domaines de skis

    </p>
    {% if admin == true %}
        <a href="{{ path('domaine_new') }}">Ajouter un domaine</a>
    {% endif %}
    <div class="global">
        {% for domaines in domaine  %}
        <div>
            <h3>{{ domaines.name }}</h3>
            <img src="/uploads/{{ domaines.image }}" alt="image de la station" width="200" height="200">
            <br>
            <a href="{{ path('app_edit',{'id': domaines.id}) }}">voir la station</a>
        </div>


    {% endfor %}
    </div>

{% endblock %}
